<div class="container">
  <div class="table-wrapper">
    <div class="table-title">
      <div class="row">
        <div class="col-sm-6">
          <h2><b>LeaderBoard</b></h2>
        </div>
        <div class="col-sm-6">
          <a href="games/new" class="btn btn-success" data-toggle="modal"><i class="material-icons">&#xE147;</i> <span>Create Match</span></a>
        </div>
      </div>
    </div>
    <table class="table table-striped table-hover">
      <thead>
        <tr>
          <th>Player</th>
          <th>No of Game</th>
          <th>Aaverage Score</th>
        </tr>
      </thead>
      <tbody>
        <% if @players.present? %>
          <% @players.each do |player| %>
            <tr>
              <td><%= link_to(player.first_name, player, class: 'btn-link')%></td>
              <td><%= player.matches.count %></td>
              <td><%= (player.matches.pluck(:score).sum / player.matches.pluck(:score).count).round %></td>
            </tr>
          <% end %>
        <% else %>
          <tr>
            <td colspan='3' class="test-position"> No Records Found</td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
